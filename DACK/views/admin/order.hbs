<head>
    {{> head-admin}}
</head>

<body>
    <!-- Left Panel -->
   {{> nav-admin}}
    <div id="right-panel" class="right-panel">
        <!-- Header-->
       {{> header-admin}}
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Quản lý đơn hàng</strong>
                                <button class="btn btn-primary" style="float: right; " data-toggle="modal" data-target="#add">New</button>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>

                                            <th>Đơn hàng</th>
                                            <th>Khách hàng </th>
                                           
                                            <th>Tổng tiền </th>
                                            <th>Trạng thái</th>
                                            <th>Ngày</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       {{#each bill}}
                                        <tr>
                                            <td><a href="orders.html" class="btn btn-link">{{MaHD}}</a></td>
                                            <td>{{KhachHang}}</td>
                                            
                                            <td>{{TongTien}}</td>
                                            <td>
                                                <span class="badge badge-warning">{{TrangThai}}</span>
                                            </td>
                                            <td>{{formatTime Date}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>

                                {{!-- <ul class="pagination">
                                    <li class="disabled"><a href="/order" class="btn btn-xs btn-primary">&laquo;</a></li>
                                    <li class="active"><a href="/order" class="btn btn-xs btn-primary">1</a></li>
                                    <li><a href="/order" class="btn btn-xs btn-primary">2</a></li>
                                    <li><a href="/order" class="btn btn-xs btn-primary">3</a></li>
                                    <li><a href="/order" class="btn btn-xs btn-primary">4</a></li>
                                    <li><a href="/order" class="btn btn-xs btn-primary">&raquo;</a></li>
                                </ul> --}}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .content -->

    </div>
    <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel"> THÊM ĐƠN HÀNG</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group row">
                            <label class="control-label col-md-2">Mã đơn hàng</label>
                            <div class="col-md-9">
                                <input class="form-control" id="code" placeholder="Nhập mã đơn hàng" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Khách hàng</label>
                            <div class="col-md-9">
                                <input class="form-control" id="name-product" placeholder="Nhập mã khách hàng" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Mã sản phẩm</label>
                            <div class="col-md-9">
                                <input class="form-control" id="name-product" placeholder="Nhập mã sản phẩm" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Tổng tiền</label>
                            <div class="col-md-9">
                                <input class="form-control" id="total-price" placeholder="Tổng tiền" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Trạng thái</label>
                            <div class="col-md-9">
                                <select name="select" id="select" class="form-control">
                                    <option value="0">Chưa giao</option>
                                    <option value="1">Đang giao</option>
                                    <option value="2">Đã giao</option>
                                    <option value="3">Đã hủy</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="sign-in-btn"> Add </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel"> THÔNG TIN ĐƠN HÀNG</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group row">
                            <label class="control-label col-md-2">Mã đơn hàng</label>
                            <div class="col-md-9">
                                <input class="form-control" id="code" value="Nz001" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Khách hàng</label>
                            <div class="col-md-9">
                                <input class="form-control" id="customer" value="Donna Snider" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">SDT</label>
                            <div class="col-md-9">
                                <input class="form-control" id="phone" value="0968280548" type="text">
                            </div>
                        </div>
                         <div class="form-group row">
                            <label class="control-label col-md-2">Địa chỉ nhận hàng</label>
                            <div class="col-md-9">
                                <input class="form-control" id="address" value="135b Trần Hưng Đạo Quận 1 TPHCM" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Mã sản phẩm</label>
                            <div class="col-md-9">
                                <input class="form-control" id="name-product" value="Nz001 Nb003" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Tổng tiền</label>
                            <div class="col-md-9">
                                <input class="form-control" id="total-price" value="1 680 000 VNĐ" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Trạng thái</label>
                            <div class="col-md-9">
                                <select name="select" id="select" class="form-control">
                                    <option value="0">Chưa giao</option>
                                    <option value="1">Đang giao</option>
                                    <option value="2">Đã giao</option>
                                    <option value="3">Đã hủy</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="sign-in-btn"> Update </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- /#right-panel -->
   {{> js}}
</body>

</html>