<head>
    {{> head-admin}}
</head>

<body>
    <!-- Left Panel -->
    {{> nav-admin}}
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        {{> header-admin}}
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Quản lý nhà sản xuất</strong>
                                <button class="btn btn-primary" style="float: right; " data-toggle="modal" data-target="#add">New</button>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Mã NSX</th>
                                            <th>Nhà sản xuất</th>
                                            <th>Xuất xứ</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Nz</td>
                                            <td>Naza</td>
                                            <td>Hong Kong</td>
                                            <td>
                                                <center>
                                                    <div class="btn-group btn-group-xs">
                                                        <a href="#" data-toggle="modal" data-target="#edit" class="btn btn-xs btn-default">
                                                            <i class="fa fa-pencil" ></i>
                                                        </a>
                                                        <a href="javascript:void(0)" data-toggle="tooltip" title="" class="btn btn-xs btn-danger" data-original-title="Delete"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </center>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Nb</td>
                                            <td>Neo bag</td>
                                            <td>Nhập khẩu</td>
                                            <td>
                                                <center>
                                                    <div class="btn-group btn-group-xs">
                                                        <a href="#" data-toggle="modal" data-target="#edit" class="btn btn-xs btn-default">
                                                            <i class="fa fa-pencil" ></i>
                                                        </a>
                                                        <a href="javascript:void(0)" data-toggle="tooltip" title="" class="btn btn-xs btn-danger" data-original-title="Delete"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </center>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Ar</td>
                                            <td>Artemys</td>
                                            <td>Việt Nam</td>
                                            <td>
                                                <center>
                                                    <div class="btn-group btn-group-xs">
                                                        <a href="#" data-toggle="modal" data-target="#edit" class="btn btn-xs btn-default">
                                                            <i class="fa fa-pencil" ></i>
                                                        </a>
                                                        <a href="javascript:void(0)" data-toggle="tooltip" title="" class="btn btn-xs btn-danger" data-original-title="Delete"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </center>
                                            </td>
                                        </tr>
                                       
                                    </tbody>
                                </table>
                                <ul class="pagination">
                                    <li class="disabled"><a href="/brand" class="btn btn-xs btn-primary">&laquo;</a></li>
                                    <li class="active"><a href="/brand" class="btn btn-xs btn-primary">1</a></li>
                                    <li><a href="/brand" class="btn btn-xs btn-primary">2</a></li>
                                    <li><a href="/brand" class="btn btn-xs btn-primary">3</a></li>
                                    <li><a href="/brand" class="btn btn-xs btn-primary">4</a></li>
                                    <li><a href="/brand" class="btn btn-xs btn-primary">&raquo;</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .content -->
    </div>
    <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel"> THÊM NHÀ SẢN XUẤT</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="control-label col-md-2">Mã NSX</label>
                        <div class="col-md-9">
                            <input class="form-control" id="code" placeholder="Nhập mã nhà sản xuất" type="text">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Tên loại</label>
                        <div class="col-md-9">
                            <input class="form-control" id="name" placeholder="Nhập tên nhà sản xuất" type="text">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Xuất xứ</label>
                        <div class="col-md-9">
                            <input class="form-control" id="country" placeholder="Nhập nơi xuất xứ" type="text">
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="sign-in-btn"> Add </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel"> THÔNG TIN LOẠI SẢN PHẨM</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                </div>
              <div class="modal-body">
                    <div class="form-group row">
                        <label class="control-label col-md-2">Mã NSX</label>
                        <div class="col-md-9">
                            <input class="form-control" id="code" value="Nz" type="text">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Tên NSX</label>
                        <div class="col-md-9">
                            <input class="form-control" id="name" value="Naza" type="text">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Xuất xứ</label>
                        <div class="col-md-9">
                            <input class="form-control" id="country" value="Hong Kong" type="text">
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="sign-in-btn"> Update </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#right-panel -->
    <!-- Right Panel -->
    {{> js}}
</body>

</html>